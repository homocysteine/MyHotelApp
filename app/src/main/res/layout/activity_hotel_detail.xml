                    android:textColor="#3dabe8"
                    android:textSize="15sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/amities_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingLeft="6dp"
                    android:paddingTop="14dp"></android.support.v7.widget.RecyclerView>


                <com.arcsoft.arcfacedemo.customfonts.MyTextView_OpenSans_Bold
