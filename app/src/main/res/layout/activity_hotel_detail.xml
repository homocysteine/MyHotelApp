                                    android:textColor="#f92a44"
                                    android:textSize="10.7sp" />

                                <com.arcsoft.arcfacedemo.customfonts.MyTextView_Opensans_SemiBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="- ￥392"
                                    android:textColor="#4f4f4f"
                                    android:textSize="12.3sp" />


                            </LinearLayout>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginLeft="7.3dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="7.3dp"
                                android:background="#e3e3e3" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginRight="13dp"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal">

                                <com.arcsoft.arcfacedemo.customfonts.MyTextView_OpenSans_Regular
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="最终价格"
                                    android:textColor="#4f4f4f"
                                    android:textSize="12.3sp" />

                                <com.arcsoft.arcfacedemo.customfonts.MyTextView_OpenSans_Bold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="￥ 734"
                                    android:textColor="#43a045"
                                    android:textSize="15sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="13.3dp"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/custom_checkbox"/>

                    <com.arcsoft.arcfacedemo.customfonts.MyTextView_OpenSans_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.3sp"
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="center"
                        android:textColor="#4f4f4f"
                        android:gravity="center_horizontal"
                        android:text="我阅读并同意"
                        />

                    <com.arcsoft.arcfacedemo.customfonts.MyTextView_Opensans_SemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.3sp"
                        android:textColor="#f92a44"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_horizontal"
                        android:text="顾客须知"
                        />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>


    <com.arcsoft.arcfacedemo.customfonts.MyTextView_PTSans_Bold
        android:id="@+id/txtbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13.3sp"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/greenrectangle"
        android:paddingTop="19.3dp"
        android:paddingBottom="19.3dp"
        android:lineSpacingExtra="-9.3sp"
        android:text="订购房间"
        />
