<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="13dp"
    app:cardElevation="3dp"
    android:layout_marginTop="13dp"
    android:orientation="vertical"
    app:cardCornerRadius="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/hotel" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/green_rectangle"
                android:orientation="vertical">


                <customfonts.MyTextView_Opensans_SemiBold
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:text="4.5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:paddingRight="13dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="13dp">


                <com.arcsoft.arcfacedemo.customfonts.MyTextView_Opensans_SemiBold
                    android:id="@+id/hotelname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hotel Surya Palace"
                    android:textColor="#4f4f4f"
                    android:textSize="15sp" />

                <com.arcsoft.arcfacedemo.customfonts.MyTextView_Opensans_SemiBold
                    android:layout_width="46dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="9dp"
                    android:background="@drawable/blue_gradient"
                    android:gravity="center"
                    android:text="65% OFF"
                    android:textColor="@color/white"
                    android:textSize="9.5sp" />

                <com.arcsoft.arcfacedemo.customfonts.MyTextView_OpenSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rs. 699"
                    android:textColor="#43a047"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="13dp">


                <com.arcsoft.arcfacedemo.customfonts.MyTextView_OpenSans_Regular
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="Alkapuri, Vadodara"
                    android:textColor="#aeaeae"
                    android:textSize="12.5sp" />

                <com.arcsoft.arcfacedemo.customfonts.MyTextView_OpenSans_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/striketext"
                    android:textColor="#aeaeae"
                    android:textSize="12.5sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="13dp"
                android:orientation="horizontal">



                <com.arcsoft.arcfacedemo.customfonts.MyTextView_Opensans_SemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#fefdfd"
                    android:paddingTop="4.7dp"
                    android:paddingBottom="4.7dp"
                    android:paddingLeft="5.3dp"
                    android:paddingRight="5.7dp"
                    android:background="@drawable/blue_rectangle"
                    android:text="Includes Breakfast"
                    />

                <com.arcsoft.arcfacedemo.customfonts.MyTextView_Opensans_SemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:textColor="#f92c44"
                    android:text="2 Rooms left"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>